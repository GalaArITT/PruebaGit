@model siteSPPP.Models.Noticias

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span style="font-size:1.5em;text-align:left">
    <strong>
    @{ 
        string strTitulo = Html.DisplayFor(model => model.TITULO).ToString();
        @Html.Raw(strTitulo);
    }
    </strong>
</span>
<hr />
<span style="font-size:13pt;text-align:left">
    <em class="row" style="text-align:left">@Html.DisplayFor(model => model.BALAZO1)</em>
</span>
<hr />
                
<section class="slider">
    <div class="flexslider">
        <ul class="slides">
        @foreach (var item in Model.Memoria_fotografica)
        {
            <li>
                <img src="/Noticias/ObtenerFotos/@Html.DisplayFor(modelItem => item.ID_NOTICIA)/@Html.DisplayFor(modelItem => item.NUM_FOTO)" />
                <p class="flex-caption" style="font-size:8pt;">@Html.DisplayFor(modelItem => item.PIE_FOTO)</p>

            </li>
        }
        </ul>
    </div>
</section>
<dl class="dl-horizontal" style="text-align:justify">
    @{
        @Html.DisplayFor(model => model.LUGAR);
        string sFecha = Model.FECHA.ToLongDateString();
        sFecha = System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.ToTitleCase(sFecha).Replace(" De ", " de ");
        @Html.Raw("; " + sFecha + " .- ");

        string myString;
        string myString2 = Html.DisplayFor(model => model.EVENTO).ToString();
        myString = myString2.Replace(Environment.NewLine, "<br/>");

        @Html.Raw(myString);

    }
    <br/><br/>
    <span style="font-size:8pt;">
        <i>
            @Html.DisplayFor(model => model.RESPONSABLE)
        </i>
    </span>
    <br/>
</dl>
            
