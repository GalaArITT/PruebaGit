@model IEnumerable<siteSPPP.Models.ARCHIVOS>
@{
    ViewBag.Title = "MacroindicadoresInversion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Macroindicadores de Inversión</h2>
<hr />
<table width:"100%" border="0" cellpadding="0" cellspacing="4">
    @foreach (var item in Model)
    {
        if (item.IDTIPO == 15)
        {

            <tr>
                <td height="20">
                    <img src="~/Content/images/pdf_gray-02.png" height="25" />
                </td>
                <td height="20">
                    <a href="@Url.Action("MostrarPDF", "Archivos", new { id = item.IDARCHIVO })" target="_blank">
                        @Html.DisplayFor(s => item.NOMBREARCHIVO)
                    </a>
                </td>
            </tr>

        }
    }
</table>