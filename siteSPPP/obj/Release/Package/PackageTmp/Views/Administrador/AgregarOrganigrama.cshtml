@model siteSPPP.Models.ORGANIGRAMA

@{
    ViewBag.Title = "AgregarOrganigrama";
    Layout = "~/Views/Shared/LayoutAuth.cshtml";
}

<h2>Agregar un nuevo Organigrama</h2>


@using (Html.BeginForm("AgregarOrganigrama", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sube el archivo que contiene la información</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.IMAGEN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-10">
                    <input type="file" id="IMAGEN" name="IMAGEN" />
                </div>
                @Html.ValidationMessageFor(model => model.IMAGEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Archivo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "ListaOrganigramas")
</div>

