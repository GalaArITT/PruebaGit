@model IEnumerable<siteSPPP.Models.NOTICIAS_SEPLAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="slider">
    <div class="flexslider">
        <ul class="slides">
            @foreach (var item in Model)
            {
                <li>
                    <img src="/Home/MostrarFoto/@Html.DisplayFor(modelItem => item.FOTOS.FirstOrDefault().IDFOTO)" alt="" height=500 width=500 />
                    <p class="flex-caption">
                        @{
                            string strURL = "<a href='/Home/NoticiaCompleta/" + Html.DisplayFor(modelItem => item.IDNOTICIA).ToString() + "'>";
                            string strTitulo = Html.DisplayFor(modelItem => item.TITULO).ToString();
                            strTitulo = MvcHtmlString.Create(strTitulo).ToString() + "</a>";
                            @Html.Raw(strURL);
                            @Html.Raw(strTitulo);
                        }
                    </p>
                </li>
            }

        </ul>

    </div>
</section>

