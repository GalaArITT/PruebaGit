@model IEnumerable<siteSPPP.Models.FOTOS>

@{
    ViewBag.Title = "Lista de fotos";
    Layout = "~/Views/Shared/LayoutCapturista.cshtml";
    int idNoticia = ViewBag.IDNOTICIA; //instanciar al idNoticia con un objeto ViewBag
}

<h2>@ViewBag.Title</h2>
<div class="text-left">
    @Html.ActionLink("Regresar a Lista de Noticias", "ListaNoticias")
</div>
<p>
    @Html.ActionLink("Agregar Fotografía", "AgregarFoto", "Capturista", new { idNoticia}, new { @class = "btn btn-outline-primary m-1", role = "button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FOTOGRAFIA)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Action("MostrarFoto", "Capturista", new { id = item.IDFOTO })" height="180" width="180" />
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarFoto", new { id = item.IDFOTO }) |
                @Html.ActionLink("Eliminar", "EliminarFoto", new { id = item.IDFOTO })
            </td>
        </tr>
    }

</table>


